<div class="container">
	<% if current_user %>
          <fieldset>
		<legend>New topic</legend>
		<%= simple_form_for(@topic) do |f| %>
		<div class="row-fluid">
		<div class="span3" >
		<%= select("node","id",@nodes.map{ |node| [node.name,node.id] })  %>
		</div>
		<div class="span4">
		<%= f.text_field :title %>
		</div>
		</div>
		<div class="row-fluid">
			<%= f.text_area :body,:class => "" %>
		</div>
		<div >
			<%= f.submit :class => "btn btn-primary" %>
		</div>
		<% end %>
	</fieldset>
	<% else %>
	<div style ="margin-left:200px">
	<h4  style="color:#498A60"> 您需要注册登录后才可发帖</h4><br/>
	<div class="row-fluid">
	<div class="span2">
	<%= link_to "登录",new_user_session_path ,:class => "btn btn-primary"%>
	</div>
	<div class="span2 ">
	<%= link_to "注册",new_user_registration_path ,:class => "btn btn-primary"%>
	</div>
	<div class="span2 ">
	<%= link_to "返回", topics_path,:class => "btn"%>
	</div>
	</div>
	<% end %>
	</div>
</div>
