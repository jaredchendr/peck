<h1>Listing judgements</h1>

<table>
  <tr>
    <th>Doctor</th>
    <th>Patient</th>
    <th>Content</th>
    <th>Time stamp</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @judgements.each do |judgement| %>
  <tr>
    <td><%= judgement.doctor_id %></td>
    <td><%= judgement.patient_id %></td>
    <td><%= judgement.content %></td>
    <td><%= judgement.time_stamp %></td>
    <td><%= link_to 'Show', judgement %></td>
    <td><%= link_to 'Edit', edit_judgement_path(judgement) %></td>
    <td><%= link_to 'Destroy', judgement, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

