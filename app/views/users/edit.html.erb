<div class="container">
	<div>
		<div class="form-horizontal">
		<%= form_for(@user) do |f| %>
		<div class="control-group">
		<%= f.label "邮箱" ,:class => "control-label"%>
		<%= f.text_field :email ,:class => "controls"%>
		</div>
		<div class="control-group">
		<%= f.label "昵称(login)" ,:class => "control-label"%>
		<%= f.text_field :login ,:class => "controls"%>
		</div>
		<div class="control-group">
		<%= f.label "真实姓名",:class => "control-label"%>
		<%= f.text_field :name,:class => "controls"%>
		</div>
		<div class="control-group">
		<%= f.label "地区" , :class => "control-label"%>
		<%= f.text_field :location,:class => "controls"%>
		</div>
		<div class="control-group">
		<%= f.label "签名",:class => "control-label"%>
		<%= f.text_field :tagline,:class => "controls"%>
		</div>
		<div class="control-group">
		<%= f.label "公司",:class => "control-label"%>
		<%= f.text_field :company , :class => "controls"%>
		</div>
		<div class="control-group">
		<%= f.label "个人简介",:class => "control-label"%>
		<%= f.text_field :bio, :class => "controls"%>
		</div>
		<div>
		<div class="control-group">
		<%= f.submit :class => "btn btn-primary offset4" %>
		</div>
		<% end %>
	</form>
	</div>
</div>