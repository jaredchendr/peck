<div class="container">
	<div class="box">
		<%= simple_form_for(resource,:as => resource_name,:url => registration_path(resource_name)) do |f| %>
		<fieldset>
			<legend>注册用户</legend>
			<%= f.input  :email,:input_html => {:class => "span5",:placeholder => "foo@bar.com" } %>
			<div class="control-group">
				<div class="controls">
				</div>
			</div>
			<%= f.input :password %>
			<%= f.input :password_confirmation %>
			<%= f.submit "提交注册信息" , :class => "btn btn-primary" %>
		</fieldset>
		<% end %>
	</div>
</div>
