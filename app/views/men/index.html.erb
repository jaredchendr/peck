<h1>Listing men</h1>
<%= form_tag men_path,:method => :get do %>
  <p>
  <%= text_field_tag :search,params[:search] %>
  <%= submit_tag "search",:name => nil %>
  </p>
<% end %>
<table>
  <tr>
    <th>Name</th>
    <th>Id</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @men.each do |man| %>
  <tr>
       <td><%= man.name %></td>
    <td><%= man.id %></td>
    <td><%= link_to 'Show', man %></td>
    <td><%= link_to 'Edit', edit_man_path(man) %></td>
    <td><%= link_to 'Destroy', man, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

